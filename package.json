{
  "name": "@guardian-network/erc20-policy-demo",
  "version": "1.0.8",
  "keywords": [],
  "author": "@v.grabovski@lacero.io,vpriadko@lacero.io",
  "description": "Policy Demon ERC20",
  "license": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "/contracts/**/*.sol"
  ],
  "engines": {
    "node": ">=18.20.4"
  },
  "publishConfig": {
    "@guardian-network:registry": "https://gitlab.com/api/v4/projects/71825808/packages/npm/"
  },
  "scripts": {
    "build": "tsc -p tsconfig-prod.json && pnpm format:ts:fix && pnpm copy-dts",
    "build:contracts": "pnpm exec hardhat compile",
    "build:contracts:force": "pnpm build:contracts --force",
    "check": "pnpm lint:ts && pnpm check:ts",
    "check:ts": "tsc -p tsconfig-prod.json --noEmit",
    "check:ts:dev": "tsc -p tsconfig.json --noEmit",
    "clean": "pnpm remove:dist && pnpm remove:contracts && pnpm remove:typechain",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "format:all:fix": "pnpm format:sol:fix && pnpm format:ts:fix",
    "format:ts:fix": "pnpm exec prettier -w -c \"src/**/*.ts\" \"test/**/*.ts\" \"hardhat-scripts/**/*.ts\" \"config-hardhat/**/*.ts\" \"ignition/**/*.ts\"",
    "format:sol:fix": "pnpm exec prettier --plugin=prettier-plugin-solidity -w -c \"contracts/**/*.sol\"",
    "lint:sol": "pnpm exec solhint -f table --max-warnings 0 'contracts/**/*.sol'",
    "lint:sol:fix": "pnpm exec solhint --noPrompt -f table 'contracts/**/*.sol' --fix",
    "lint:ts": "eslint",
    "lint:ts:fix": "eslint --fix",
    "local:development:node": "pnpm exec hardhat node --network hardhat",
    "remove:contracts": "pnpm exec hardhat clean",
    "remove:dist": "pnpm exec rimraf dist",
    "remove:typechain": "pnpm exec rimraf src/typechain",
    "test": "pnpm test:contracts",
    "test:contracts": "pnpm exec hardhat test --bail",
    "verify:amoy": "pnpm verify:noNetwork amoy",
    "verify:noNetwork": "pnpm exec hardhat run hardhat-scripts/verifyContracts.ts --network"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.14.0",
    "@faker-js/faker": "^9.0.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.9",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/ignition-core": "^0.15.9",
    "@types/chai": "4.3.3",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.8.0",
    "chai": "^4.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-n": "^17.13.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.11.0",
    "hardhat": "^2.24.3",
    "hardhat-contract-sizer": "^2.10.0",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-solidity": "^1.4.1",
    "rimraf": "^6.0.1",
    "solhint": "^5.0.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.3.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@solidity-parser/parser": "^0.18.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
